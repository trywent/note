const module_t classic_peer_module @peer.c

//获取
module_t *get_module(const char *name) {
  module_t* module = (module_t *)dlsym(RTLD_DEFAULT, name)
  return module;
}
//初始化
module_init(const module_t *module) {
- call_lifecycle_function(module->init)
- set_module_state(module, MODULE_STATE_INITIALIZED)
}

//启动
module_start_up(const module_t *module) {
- call_lifecycle_function(module->start_up)
- set_module_state(module, MODULE_STATE_STARTED);
}
//关闭
module_shut_down(const module_t *module) {
- call_lifecycle_function(module->shut_down)
- set_module_state(module, MODULE_STATE_INITIALIZED)
}

