SetMetadataFn{
- bool recursive = (strcmp(name, "set_metadata_recursive") == 0)
- if (recursive) {
	- nftw(args[0], do_SetMetadataRecursive, 30, FTW_CHDIR | FTW_DEPTH | FTW_PHYS)
  }else{
	- ApplyParsedPerms(state, args[0], &sb, parsed)
  }
}@intall.c


