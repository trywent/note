//
Configuration{
- fontScale
- mcc  //Mobile Country Code 移动设备国家代码 460mcc6mnc 中国(460)联通(6)
- mnc  //Mobile Network Code 移动网络代码
- locale
- mLocaleList //语言
- touchscreen //触摸,触摸笔
- keyboard //键盘模式
- keyboardHidden 
- navigation //光标,滚轮,触摸
- navigationHidden
- orientation //横竖屏
- screenLayout //布局模式,大小,从左至右/右至左
- colorMode //颜色模式
- uiMode    //夜晚模式
- screenWidthDp //当前宽度
- screenHeightDp //当前高度
- smallestScreenWidthDp //最小宽度
- densityDpi //像素密度
- assetsSeq 
- appBounds //应用大小
- seq = 0;
}

computeScreenConfiguration(Configuration config){
- config.setAppBounds(leftInset /*left*/, topInset /*top*/, leftInset + displayInfo.appWidth /*right*/,
                topInset + displayInfo.appHeight /*bottom*/)
}@DisplayContent.java

adjustConfigurationForBounds{
- 
- config.setAppBounds(!bounds.isEmpty() ? bounds : null)
}@StackWindowController.java


frameworks/base/core/java/android/content/res/Configuration.java
frameworks/base/services/core/java/com/android/server/wm/StackWindowController.java
frameworks/base/services/core/java/com/android/server/wm/DisplayContent.java
