	- codec_dai->driver->ops->delay
	- platform->driver->delay
	}
- 
}@soc-pcm.c


//设置hw_params
snd_pcm_common_ioctl1(SNDRV_PCM_IOCTL_HW_PARAMS)-->snd_pcm_common_ioctl1
