	- struct snd_device *dev = kzalloc(sizeof(*dev))
	//初始化struct snd_device
	- dev->device_data = device_data //设置为pcm
	- dev->ops = ops 
	- list_add(&dev->list, p) //设备加入到card->devices
	}@device.c
}@pcm.c

